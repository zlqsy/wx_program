/** 首页、分类 商品列表公共部分样式 **/

.goods-wrap {
  padding: 10rpx;
  overflow: hidden;
}

.goods-item {
  float: left;
  width: 50%;
  padding: 10rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.goods-item .item-link {
  width: 100%;
  height: 100%;
  background-color: #fff;
  position: relative;
}

.goods-item .item-img {
  width: 100%;
  padding-top: 100%;
  background: url(../../images/placeholder.png) no-repeat 50% 50%;
  -webkit-background-size: contain;
  background-size: contain;
}

.goods-item .sale-tj {
  width: 100%;
  padding-top: 100%;
  background: url(../../images/sale-tj.png) no-repeat 50% 50%;
  -webkit-background-size: contain;
  background-size: contain;
  position: absolute;
  top: 0;
  left: 0;
}

.goods-item .item-text1 {
  padding: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.goods-item .item-zg {
  color: #fd3846;
  border: 1rpx solid #fd3846;
  border-radius: 40rpx;
  padding: 2rpx 6rpx;
  font-size: 24rpx;
  vertical-align: middle;
  margin-right: 4rpx;
}

.goods-item .item-title {
  font-size: 28rpx;
  vertical-align: middle;
}

.goods-item .item-text2 {
  padding: 10rpx;
  overflow: hidden;
}

.goods-item .item-price {
  float: left;
  color: #fd3846;
  font-size: 28rpx;
}
.goods-item .item-del {
  float: left;
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin: 2rpx 0 0 10rpx;
}
.goods-item .item-bh {
  float: right;
  font-size: 24rpx;
  color: #fd3846;
}

.goods-more {
  display: block;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #999;
}

.no-service {
  margin: 100rpx auto;
  text-align: center;
}

.no-service image {
  display: block;
  width: 190rpx;
  height: 205rpx;
  margin: 0 auto 20rpx;
}

.no-service text {
  display: block;
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}
