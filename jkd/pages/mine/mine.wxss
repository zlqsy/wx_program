.mine-title {
  padding: 0 20rpx;
  background-color: #e43031;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}
.mine-title .txt {
  float: left;
  font-size: 32rpx;
}
.mine-title .arrow {
  float: right;
  width: 24rpx;
  height: 24rpx;
  border-top: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
  margin-top: 35rpx;
}

.func-entry {
  overflow: hidden;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #dadada;
}
.coupon, .address, .news {
  float: left;
  width: 33.33%;
  text-align: center;
  box-sizing: border-box;
  border-right: 1rpx solid #dadada; 
}
.news {
  border: none;
}
.mine .icon-coupon, .mine .icon-add, .mine .icon-news {
  display: block;
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto 10rpx;
}

.kf-entry {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #dadada;
  border-bottom: 1rpx solid #dadada;
  height: 48rpx;
  line-height: 48rpx;
}
.kf-entry image {
  float: left;
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}
.kf-entry .tel {
  float: left;
}
.kf-entry .arrow {
  float: right;
  width: 20rpx;
  height: 20rpx;
  border-top: 1rpx solid #dadada;
  border-right: 1rpx solid #dadada;
  transform: rotate(45deg);
  margin-top: 10rpx;
}



