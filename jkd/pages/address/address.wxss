.change-wrap {
    overflow: hidden;
    padding: 20rpx;
    background-color: #e43031;
}
.change-add {
    width: 100%;
    float: left;
    height: 60rpx;
    line-height: 60rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 5rpx 20rpx;
    background: #ffffff;
    -webkit-border-radius: 10rpx;
    border-radius: 10rpx;
    overflow: hidden;
    font-size: 28rpx;
    position: relative;
}
.change-add image {
    position: absolute;
    top: 14rpx;
    left: 20rpx;
    width: 30rpx;
    height: 30rpx;
}
.change-add input {
    width: 100%;
    box-sizing: border-box;
    padding-left: 40rpx;
}
.add-clear {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 0;
    right: 0;
}
.add-clear text {
    font-weight: bold;
    background-color: #999999;
    -webkit-border-radius: 100%;
    border-radius: 100%;
    color: #fff;
    margin-left: 10rpx;
    font-size: 24rpx;
}

.location-btn {
    background-color: #fff;  
    border-radius: 0;
}
.location-btn::after {
    border-radius: 0;
    border: none;
}
.location-btn image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}
.location-btn text {
    color: #fd3846;
    vertical-align: middle;
}

.search-wrap {
    padding: 0 20rpx;
    background: #ffffff;
}
.search-wrap .search-item {
    border-bottom: 2rpx solid #dadada;
    padding: 10rpx 0;
}
.search-wrap text {
    display: block;
    font-size: 28rpx;
    line-height: 1.8;
}
.search-wrap .search-location {
    color: #999999;
}


.address-list {
    margin-top: 20rpx;
}

.address-list .add {
    padding: 30rpx 20rpx;
    background-color: #fff;
    color: #fd3846;
    text-align: center;
}

.address-list .list {

}
.address-list .list-title {
    padding: 20rpx;
    border-bottom: 1rpx solid #dadada;
}
.address-list .address-item {
    border-bottom: 1rpx solid #dadada;
    background-color: #fff;
    padding: 20rpx 0;
    overflow: hidden;
    position: relative;
}
.address-list .item-left {
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.item-left .address-info {
    margin-bottom: 10rpx;
}
.item-left .address-info text:nth-of-type(1), .item-left .address-tel text:nth-of-type(1) {
    margin-right: 10rpx;
}
.item-left .address-tel {
    color: #999;
}
