.detail-wrap {
    padding-bottom: 90rpx;
}
.detail-wrap .swiper-wrap {
    width: 100%;
    padding-top: 100%;
    position: relative;
    background-color: #fff;
}
.detail-wrap .swiper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
.detail-wrap  .swiper-image {
    width: 100%;
    height: 100%;
}

.detail-info {
    border-top: 1px solid #dadada;
    border-bottom: 1px solid #dadada;
    background-color: #fff;
    padding: 20rpx;
    margin-bottom: 20rpx;
}
.detail-info .info-zg {
    border: 1px solid #fd3846;
    color: #fd3846;
    border-radius: 40rpx;
    font-size: 24rpx;
    padding: 2rpx 8rpx;
}
.detail-info .info-title {
    padding: 4rpx 0 4rpx 8rpx;
    vertical-align: middle;
    line-height: 1.5;
}
.detail-info  .info-txt1 {
    padding-bottom: 8rpx;
}
.detail-info .info-sub-title {
    font-size: 24rpx;
    color: #999;
    padding-bottom: 8rpx;
}
.detail-info .info-txt2 {
    height: 68rpx;
    line-height: 68rpx;
    overflow: hidden;
}
.detail-info .info-price {
    color: #fd3846;
    margin-right: 8rpx;
    float: left;
}
.detail-info .info-del {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
    margin-right: 8rpx;
    float: left;
}
.detail-info .info-out {
    color: #fd3846;
    float: right;
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.detail-info .info-join {
    float: right;
    padding: 0 12rpx;
    color: #fff;
    border-radius: 4rpx;
    background-color: #fd3846;
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
}


.detail-shop {
    border-top: 1rpx solid #dadada;
    border-bottom: 1rpx solid #dadada;
    background-color: #fff;
    padding: 20rpx;
    position: relative;
}
.detail-shop .shop-name {
    margin-bottom: 8rpx;
}
.detail-shop .shop-ty {
    font-size: 24rpx;
    color: #fff;
    background-color: #fd3846;
    border-radius: 40rpx;
    padding: 4rpx 8rpx;
}
.detail-shop .start {
    height: 30rpx;
    margin-bottom: 8rpx;
    background: url('http://m.jiukuaidao.com/images/wap3.2/star.png') 0 top no-repeat;
    background-size: 140rpx;
    overflow: hidden;
}
.detail-shop .start2 {
    background-position: 0 -35rpx;
}
.detail-shop .start3 {
    background-position: 0 -70rpx;
}
.detail-shop .start4 {
    background-position: 0 -105rpx;
}
.detail-shop .start5 {
    background-position: 0 -140rpx;
}
.detail-shop .shop-other {
    font-size: 24rpx;
    color: #999;
}
.detail-shop .shop-other text {
    padding: 0 8rpx;
}
.detail-shop .shop-other text:nth-of-type(1), .detail-shop .shop-other text:nth-of-type(2) {
    border-right: 1rpx solid #999;
}
.detail-shop .shop-arrow {
    width: 24rpx;
    height: 24rpx;
    border-top: 1px solid #999;
    border-right: 1px solid #999;
    position: absolute;
    top: 60rpx;
    right: 20rpx;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}

.shop-all {
    margin: 20rpx 20rpx 0 20rpx;
    position: relative;
    text-align: center;
    display: block;
}
.shop-all .line {
    width: 100%;
    height: 1rpx;
    background-color: #dadada;
    position: absolute;
    top: 16rpx;
    left: 0;
}
.shop-all .all-txt {
    font-size: 24rpx;
    color: #999;
    padding: 0 20rpx;
    background-color: #f4f4f4;
    position: relative;
    z-index: 10;
}

.has-service .options {
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
