.register-wrap {
    padding-top: 20rpx;
}

.phone {
    background-color: #fff;
    border-bottom: 1rpx solid #dadada;
}
.phone .phone-input, .phone .mess-input,.phone .set-input {
    padding: 20rpx 20rpx 20rpx 0;
    margin-left: 60rpx; 
    position: relative;
    border-bottom: 1rpx solid #dadada;
}
.phone .set-input {
   border: none; 
}
.phone .phone-input image, .phone .mess-input image, .phone .set-input image {
    width: 44rpx;
    height: 44rpx;
    position: absolute;
    top: 24rpx;
    left: -48rpx;
}
.phone .phone-input input, .phone .set-input input {
    display: inline-block;
    width: 90%;
    padding: 0 20rpx;
}
.phone .mess-input input {
    display: inline-block;
    width: 50%;
    padding: 0 20rpx;
}
.phone .mess-input button {
    width: 30%;
    line-height: 56rpx;
    border-color: #dadada;
    font-size: 28rpx;
    color: #999999;
    position: absolute;
    top: 16rpx;
    right: 20rpx;
    pointer-events: none;
}
.phone .mess-input .button-active {
    color: #ff961a;
    border-color: #ff961a;
    pointer-events: auto;
}

.login-btn {
    padding: 40rpx 20rpx 0;
}
.login-btn .login-button {
    height: 80rpx;
    line-height: 80rpx;
    border: none;
    background-color: #bfbfbf;
    color: #fff;
    font-size: 28rpx;
}
.login-btn .login-button-cur {
    background-color: #fd3846;
}

.agreement {
    display: inline-block;
    padding: 20rpx;
    color: #999999;
}